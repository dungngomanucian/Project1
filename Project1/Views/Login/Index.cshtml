@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@model TUser

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
data-sidebar-position="fixed" data-header-position="fixed">
    <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
        <div class="d-flex align-items-center justify-content-center w-100">
            <div class="row justify-content-center w-100">
                <div class="col-md-8 col-lg-5 col-xxl-5">
                    <div class="card mb-0">
                        <div class="card-body" style="padding: 20px">
                            <a class="text-nowrap logo-img text-center d-block py-3 w-100">
                                <img src="../1LayoutLogin/assets/images/logos/dark-logo.svg" width="180" alt="" style="border-radius: 50%">
                            </a>
                            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { id = "loginForm" }))
                            {
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Email</label>
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "email", name = "email", id = "email", placeholder = "name@example.com" })
                                    <span asp-validation-for="Email" class="text-danger" style="color: red;"></span>
                                </div>
                                <div class="mb-4">
                                    <label for="exampleInputPassword1" class="form-label">Mật khẩu</label>
                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password", name = "password", id = "password", placeholder = "Password" })
                                    <span asp-validation-for="Password" class="text-danger" style="color: red;"></span>
                                </div>
                                <div class="d-flex align-items-center justify-content-between mb-4">
                                    <div class="form-check">
                                        <input asp-for="RememberMe" style="background-color: #ffffff; border-color: #f8742c"
                                        class="form-check-input primary"
                                        type="checkbox"
                                        value=""
                                        id="rememberMe"
                                        onchange="this.style.backgroundColor = this.checked ? '#f8742c' : '#ffffff'">
                                        <label class="form-check-label text-dark" for="rememberMe">
                                            Ghi nhớ đăng nhập
                                        </label>
                                    </div>
                                </div>
                                <a style="background-color: #f8742c; border-color: #f8742c" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">
                                    <button class="btn-lg" type="submit" style="background-color: #f8742c; border: none; outline: none; color: white">Đăng nhập</button>
                                </a>
                            }
                            <p class="text-center" style="color: black">Hoặc đăng nhập với</p>
                            <a style="background-color: #ffffff; border-color: #f8742c; color: #f8742c" asp-controller="Login" asp-action="LoginGoogle" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google" viewBox="0 0 16 16">
                                    <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z" />

                                </svg>
                                Tài khoản Google
                            </a>
                            <div class="d-flex align-items-center justify-content-center">
                                <a asp-controller="User" asp-action="ForgotPassword" class="text-primary fw-bold" style="color: black!important">Quên mật khẩu ?</a>
                                <a asp-controller="User" asp-action="Resgister" class="text-primary fw-bold ms-2" style="color: #f8742c!important">Đăng ký tài khoản</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Content"] != null)
{
    <script src="/lib/jquery//dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        @if (TempData["Title"].ToString() == "Thành công")
        {
            @:toastr.success('@TempData["Content"]', '@TempData["Title"]')
        }
        else
        {
            @:toastr.error('@TempData["Content"]', '@TempData["Title"]')
        }
    </script>
}