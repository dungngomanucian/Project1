@model IEnumerable<TCategory>
<style>
    .nav-links {
        display: flex;
        align-items: center;
        background: #ffffff;
        padding: 20px 15px;
        border-radius: 12px;
        box-shadow: 0 5px 10px rgba(0,0,0,0.2);
        justify-content: space-around;
        margin-bottom: 3%
    }

    .nav-links li {
        list-style: none;
        margin: 0 12px;
    }

    .nav-links li a {
        position: relative;
        color: #333;
        font-size: 20px;
        font-weight: 500;
        padding: 6px 0;
        text-decoration: none;
    }

    .nav-links li a:before {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        height: 3px;
        width: 0%;
        background: #f17228;
        border-radius: 12px;
        transition: all 0.4s ease;
    }

    .nav-links li a:hover:before {
        width: 100%;
    }

    .nav-links li.center a:before {
        left: 50%;
        transform: translateX(-50%);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .nav-links {
            flex-wrap: nowrap; /* Ngăn xuống dòng */
            overflow-x: auto; /* Cho phép cuộn ngang */
        }

        .nav-links li {
            margin: 0 8px; /* Giảm khoảng cách */
        }

        .nav-links li a {
            font-size: 16px; /* Giảm kích thước chữ */
        }
    }

</style>
<div class="row gx-3 justify-content-center" style="display: flex; 
        justify-content: center;
        align-items: center">
    <ul class="nav-links">
    @foreach (var item in Model)
    {
        <li class="center">
            <a asp-controller="Menu"
                asp-action="ProductByCategory"
                asp-route-CategoryID="@item.CategoryId">@item.Name</a>
        </li>
    }
    </ul>
</div>