@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Project1.Areas.Admin.ViewModels
@model ComebackVoucher_ViewModel
<div class="row">
    <div class="col-10 align-items-center"><h4 class="chitiet ">Cập nhật lại</h4></div>
    <div class="col-2"><h4><span class="close-btn" onclick="closeModal()">&times;</span></h4></div>
</div>
<div class="row">
    <form asp-controller="ManageVoucher" asp-action="ActiveVoucher" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label for="voucherId">Mã voucher:</label>
            <input type="text" class="form-control" id="voucherid" name="voucherId" value="@Model?.voucherId" required readonly/>
        </div>
        <div class="form-group">
            <label for="quantity">Số lượng:</label>
            <input type="number" class="form-control" id="quantity" name="Quantity" value="@Model?.Quantity" required />
        </div>
        <div class="form-group">
            <label for="startDate">Ngày bắt đầu:</label>
            <input type="datetime-local" class="form-control" id="startDate" name="StartDate"
                   value="@(Model?.StartDate.HasValue == true ? Model.StartDate.Value.ToString("yyyy-MM-ddTHH:mm") : "")"
                   required />
        </div>
        <div class="form-group">
            <label for="endDate">Ngày kết thúc:</label>
            <input type="datetime-local" class="form-control" id="endDate" name="EndDate"
                   value="@(Model?.EndDate.HasValue == true ? Model.EndDate.Value.ToString("yyyy-MM-ddTHH:mm") : "")"
                   required />
        </div>
        <button type="submit" class="btn btn-primary">Hồi sinh</button>
    </form>
</div>
